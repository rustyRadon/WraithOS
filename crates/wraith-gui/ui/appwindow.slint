import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "WRAITH OS | THE RITUAL";
    min-width: 900px;
    min-height: 900px;
    background: #000000;

    callback generate_identity();
    callback copy_node_id();
    
    in property <string> node_id: "VOID_NODE";
    in property <[string]> words: ["?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?","?"];
    
    in-out property <bool> manifesting: false;

    // --- SPECTRAL BACKGROUND ---
    Image {
        source: @image-url("../images/img1.png");
        width: 100%;
        height: 100%;
        image-fit: cover;
        opacity: root.manifesting ? 0.35 : 0.12;
        animate opacity { duration: 1200ms; easing: ease-in-out; }
    }

    // THE ABYSS OVERLAY
    Rectangle {
        background: @radial-gradient(circle, #00000000 0%, #000000cc 75%, #000000ff 100%);
    }

    VerticalLayout {
        padding: 40px;
        spacing: 35px;
        alignment: center;

        // TITLE WITH OCCULT SPACING
        Text {
            text: "â›§ W R A I T H   O S â›§";
            font-size: 42px;
            font-weight: 900;
            color: root.manifesting ? #ff3333 : #00ffff33;
            horizontal-alignment: center;
            letter-spacing: 18px;
            animate color { duration: 800ms; }
        }

        // --- THE CIRCLE OF NODES ---
        Rectangle {
            height: 580px;
            width: 820px;
            
            for row_idx in 4: HorizontalLayout {
                y: row_idx * 145px;
                spacing: 35px;
                alignment: center;
                for col_idx in 6: Rectangle {
                    width: 110px;
                    height: 110px;

                    // ORBITAL PHYSICS ENGINE
                    // animation-tick() / 1ms converts to unitless float.
                    // Multiplying the float by 1rad converts it to an 'angle' unit for Slint.
                    property <float> t: animation-tick() / 1ms;
                    property <length> off_x: Math.sin((t / 1200.0 + (row_idx * 0.7) + (col_idx * 0.4)) * 1rad) * 18px;
                    property <length> off_y: Math.cos((t / 1200.0 + (row_idx * 0.7) + (col_idx * 0.4)) * 1rad) * 18px;

                    // THE SPECTRAL NODE (2cm Circular Core)
                    Rectangle {
                        x: parent.off_x + (parent.width - self.width) / 2;
                        y: parent.off_y + (parent.height - self.height) / 2;
                        width: 76px; 
                        height: 76px;
                        border-radius: 38px;
                        
                        background: root.manifesting 
                            ? @radial-gradient(circle, #ff000044 0%, #330000aa 100%) 
                            : #00ffff0a;
                        border-width: root.manifesting ? 2.5px : 1px;
                        border-color: root.manifesting ? #ff3333 : #00ffff22;
                        
                        // Spectral Bloom
                        drop-shadow-blur: root.manifesting ? 20px : 0px;
                        drop-shadow-color: #ff000088;

                        animate background { duration: 1000ms; }
                        animate border-color { duration: 600ms; }
                        animate drop-shadow-blur { duration: 1500ms; }

                        // THE SOUL (Word)
                        Text {
                            text: root.words[row_idx * 6 + col_idx];
                            color: root.manifesting ? #ffffff : #00000000;
                            font-size: 11px;
                            font-weight: 900;
                            font-family: "monospace";
                            horizontal-alignment: center;
                            vertical-alignment: center;
                            animate color { duration: 1000ms; }
                        }
                    }
                }
            }
        }

        // --- COMMAND SECTION ---
        VerticalLayout {
            spacing: 25px;
            alignment: center;
            
            // THE IDENTITY PILL
            Rectangle {
                width: 450px;
                height: 55px;
                background: #080808ee;
                border-radius: 27px;
                border-width: 1px;
                border-color: root.manifesting ? #ff000066 : #222;
                
                HorizontalLayout {
                    padding-left: 25px;
                    padding-right: 25px;
                    spacing: 15px;
                    
                    Text {
                        text: "NODE ID:";
                        color: root.manifesting ? #ff3333 : #444;
                        font-weight: 800;
                        vertical-alignment: center;
                    }

                    Text {
                        text: root.node_id;
                        color: root.manifesting ? #00ffcc : #00ffcc33;
                        font-family: "monospace";
                        vertical-alignment: center;
                        letter-spacing: 1px;
                    }

                    Rectangle { width: 1px; background: #333; height: 20px; } // Separator

                    Button {
                        text: "COPY";
                        width: 70px;
                        height: 30px;
                        clicked => { root.copy_node_id() }
                    }
                }
            }

            // THE RITUAL TRIGGER
            Button {
                text: root.manifesting ? "ðŸ”¥ B A N I S H   S P I R I T ðŸ”¥" : "â›§ S U M M O N   I D E N T I T Y â›§";
                width: 380px;
                height: 65px;
                clicked => { 
                    root.generate_identity();
                    root.manifesting = !root.manifesting;
                }
            }
        }
    }
}